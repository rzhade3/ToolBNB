html
    include components/header.pug
    body
        include components/navbar.pug
        .container-fluid#lending
            h2 Lend an Item
            form(action='/lend', method='POST')
                .form-group
                    input.form-control(type='category', placeholder='Category', name='category' list='autocomplete')
                    datalist(id="autocomplete")
                        option(value="Drills")
                        option(value="Saws")
                        option(value="Screwdrivers")
                        option(value="Wrenches")
                .form-group
                    input.form-control(type='number', placeholder='UPC', name='upc')
                .form-group
                    input.form-control(type='text', placeholder='Condition', name='condition', list='sizes')
                    datalist(id="sizes")
                        option(value="Like New")
                        option(value="Moderate")
                        option(value="Meh")
                        option(value="It's seen better days")
                        option(value="Hemanth")
                        option(value="Literally trash")
                .form-group
                    input.form-control(type='location', placeholder='Location', name='location')
                |
                button.btn.btn-warning.btn-lg(type='submit')    Confirm
                p(class='errorMessage')=errorMessage
